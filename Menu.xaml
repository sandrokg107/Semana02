<Window x:Class="Semana2B.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2B"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Content="Operaciones" Grid.Column="0" Margin="10" Padding="10,5" FontSize="16" Click="OperacionesButton_Click"/>
        <Button Content="Mantenimientos" Grid.Column="1" Margin="10" Padding="10,5" FontSize="16" Click="MantenimientosButton_Click"/>
        <Button Content="Reportes" Grid.Column="2" Margin="10" Padding="10,5" FontSize="16" Click="ReportesButton_Click"/>
    </Grid>
</Window>
